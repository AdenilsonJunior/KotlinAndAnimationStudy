<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.adenilsonnoronha.kotlinandanimationstudy.ObjectAnimatorActivity">

    <Button
        android:id="@+id/buttonTranslateX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Translate X"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <Button
        android:id="@+id/buttonSmoothTransition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smooth transition"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textViewNumber"
        app:layout_constraintTop_toBottomOf="@+id/buttonTranslateX"/>

    <TextView
        android:id="@+id/textViewNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It will disappear :D"
        app:layout_constraintBottom_toBottomOf="@+id/buttonSmoothTransition"
        app:layout_constraintLeft_toRightOf="@+id/buttonSmoothTransition"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonSmoothTransition"/>


    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seq3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonSequentially"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seq2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonSequentially"/>


    <Button
        android:id="@+id/buttonSequentially"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seq1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSmoothTransition"/>




    <ProgressBar
        android:id="@+id/progressBar1"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:max="10000"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSequentially"/>

    <Button
        android:id="@+id/button251"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="25"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button751"
        app:layout_constraintBottom_toBottomOf="@+id/button751"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/progressBar1"
        app:layout_constraintVertical_bias="0.6"/>

    <Button
        android:id="@+id/button751"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="19dp"
        android:text="75"
        app:layout_constraintTop_toTopOf="@id/button251"
        app:layout_constraintLeft_toRightOf="@+id/button251"
        app:layout_constraintRight_toLeftOf="@+id/button1001"
        />

    <Button
        android:id="@+id/button1001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="19dp"
        app:layout_constraintTop_toTopOf="@id/button751"
        android:text="100"
        app:layout_constraintLeft_toRightOf="@+id/button751"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/textView"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Tap here!"
        app:layout_constraintTop_toBottomOf="@id/button251"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</android.support.constraint.ConstraintLayout>
